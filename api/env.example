# Environment Configuration
NODE_ENV=development
PORT=3000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/crypto-trading

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-32-characters-long
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-32-characters-long
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# Multiple origins separated by comma (e.g., https://example.com,https://app.example.com)
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com,https://mobile.yourdomain.com

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100

# Two-Factor Authentication
TWO_FACTOR_AUTHENTICATION_APP_NAME=Crypto Trading Admin

# Binance API (Optional)
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
